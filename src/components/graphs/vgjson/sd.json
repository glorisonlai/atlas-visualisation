      "field": "TempYear",
      "type": "temporal",
      "title": "Year",
      "axis": {
        "tickSize": 10,
        "gridDash": {
          "condition": {
            "test": { "field": "Year", "equal": "Y1985" },
            "value": []
          },
          "value": [2, 2]
        },
        "tickDash": {
          "condition": {
            "test": "datum.Year == 'Y1985'",
            "value": []
          },
          "value": [2, 2]
        },
        "labelExpr": "timeFormat(datum.value, '%b %Y')",
        "tickCount": 10
      }
    },
    "y": {
      "field": "winter-desc",
      "type": "quantitative",
      "title": "Winter Temperature Change"
